<Window x:Class="ratrapage_version_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ratrapage_version_2._0"
        mc:Ignorable="d"
        Title="Disk Space Monitor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBlock VerticalAlignment="Center" Text="Temps intervale espace disque (seconds):"/>
            <TextBox Width="50" Margin="5" Text="{Binding UpdateInterval, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Set" Margin="5" Command="{Binding SetIntervalCommand}"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding LogEntries}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Espace disque disponible " Width="Auto" DisplayMemberBinding="{Binding}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
